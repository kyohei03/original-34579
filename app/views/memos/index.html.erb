<main class="main">
  <div class="inner">
     <% if user_signed_in? %>
      <div class="greeting">
        <%= link_to "#{current_user.nickname}さん", user_path(current_user), class: :greeting__link %>
        <p>　<br>
        <p>💊Dr.情報一覧💊<br>
      <div class="card__wrapper">
      <%= render partial: 'memo', collection: @memos %>
      <% else %>
        <h1>◊ Dr. Memo ◊</h1>
         <div class="drop-container">
         <div class="drop"></div>
       </div>
     <% end %>
    </div>
  </div>
</main>
